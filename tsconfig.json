{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "module": "ESNext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": "/",
    "lib": ["dom", "es2015", "es2016", "es2017", "ESNext"],
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src"
  ],
  "baseUrl": "./",
  "paths": {
    "@": ["src"]
  }
}